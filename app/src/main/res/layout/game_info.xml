<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/more_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="15dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="15dp"
    android:visibility="visible">

    <!--tools:context="com.svetlanamarhefka.view.GameInfo"-->

    <!-- Create a ScrollView
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ScrollView>
    -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/d_instructions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:baselineAligned="false"
                android:text="@string/dis_instr"
                android:textColor="@android:color/white"
                android:textSize="25sp"
                android:textStyle="bold"
                android:visibility="visible" />

            <TextView
                android:id="@+id/q_tourScore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:baselineAligned="false"
                android:text="@string/ask_score"
                android:textColor="@android:color/white"
                android:textSize="24sp" />

            <NumberPicker
                android:id="@+id/a_tourScore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:theme="@style/NumberPickerText"
                android:visibility="visible" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/q_userName_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="@string/ask_name_1"
                    android:textColor="@android:color/white"
                    android:textSize="24sp"
                    android:visibility="visible" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/q_userName_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="@string/ask_name_2"
                    android:textColor="@android:color/holo_green_light"
                    android:textSize="20sp"
                    android:visibility="visible" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="visible">

                <EditText
                    android:id="@+id/a_userName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="50dp"
                    android:inputType="textPersonName"
                    android:labelFor="@id/a_userName"
                    android:singleLine="true"
                    android:textSize="24sp"
                    android:visibility="visible" />
            </TableRow>

            <!--
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/startGame"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    android:onClick="startGameClick"
                    android:text="@string/start_game"
                    android:textSize="30sp"
                    android:visibility="visible" />
            </TableRow>
            -->

        </LinearLayout>

    <!-- This may be used again... -->

</android.support.constraint.ConstraintLayout>