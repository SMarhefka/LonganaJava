<resources>

    <!-- Base application theme. -->
    <!--<style name="AppTheme" parent="android:Theme.Holo">-->
    <style name="AppTheme" parent="@style/Theme.AppCompat">
        <!-- Customize your theme here. -->
    </style>

    <!-- Start Screen theme. -->
    <!--<style name="StartScreen" parent="android:Theme.Holo.NoActionBar">-->
    <style name="StartScreen" parent="@style/Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@android:color/black</item>
    </style>

    <!-- Main gameplay theme. -->
    <!--<style name="InfoScreen" parent="android:Theme.Holo.DialogWhenLarge.NoActionBar">-->
    <style name="InfoScreen" parent="@style/Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="android:dialogTitle">@string/app_name</item>
        <item name="android:colorBackground">@android:color/background_dark</item>
    </style>

    <style name="NumberPickerText">
        <item name="android:labelTextSize">25sp</item>
    </style>

    <!-- Main gameplay theme. -->
    <!--<style name="MainScreen" parent="android:Theme.Holo.Light">-->
    <style name="MainScreen" parent="@style/Theme.AppCompat.DayNight">
        <!-- Customize your theme here. -->
        <item name="buttonStyle">@style/Widget.AppCompat.Button.Borderless</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="ImageButtonCustom" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@android:color/transparent</item>
    </style>
</resources>
